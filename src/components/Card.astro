---
const { images, title, author, times } = Astro.props;
---

<section id="card">
    <div class="max-w-md bg-white shadow-lg rounded my-20">
        <div class="relative">
            <div class="absolute bottom-0 left-0 px-4 py-4">
                <slot name="badge"></slot>
            </div>
            <img class="object-cover rounded-t-lg" src={images} alt="image">
        </div>
        <div class="py-4 px-4">
            <h2 class="text-gray-800 text-lg font-semibold">{title}</h2>
            <h6 class="text-gray-400 text-sm font-regular mt-1">{author}</h6>
            <h6 class="text-gray-400 text-sm font-regular mt-3">{times}</h6>
        </div>
    </div>
</section>