---
const { navbarItems, navbarBtn } = Astro.props;
---

<div id="navbar">
  <nav class="bg-white dark:bg-gray-800 shadow py-2">
    <div class="max-w-7xl px-11 sm:px-11 lg:px-22 xl:px-28 mx-auto">
      <div class="flex items-center justify-between h-16">
        <div class="w-full justify-between flex items-center">
          <a class="flex-shrink-0" href="/">
            <slot />
          </a>
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              {
                navbarItems.map((item) => (
                    <a class="text-gray-300 hover:text-gray-800 dark:hover:text-white px-3 py-2 rounded-md text-sm font-medium" href="/#">
                      {item}
                    </a>
                ))
              }
              <a class="text-gray-300 px-3 py-2 text-sm font-medium" href="/#">
                <button type="submit" class="px-3 py-2 text-white bg-green-500 rounded-md focus:bg-green-600 focus:outline-none">
                  {navbarBtn}
                </button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</div>
